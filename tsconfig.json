{
  "compilerOptions": {
    "lib": ["es5", "es2015", "esnext"],
    "target": "es2015",
    "module": "commonjs",
    "inlineSourceMap": true,
    "inlineSources": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "strict": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}